<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- ECG Grafiği -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Butonlar grafikten hemen sonra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/copyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosyayı Kopyala"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunucuya Gönder"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/showPathButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yolu Göster" />
        </LinearLayout>

        <!-- Sayısal veriler (en altta) -->
        <TextView
            android:id="@+id/receivedDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gelen Veriler:\n"
            android:textColor="#000000"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#FFFFFF" />

    </LinearLayout>
</ScrollView>
